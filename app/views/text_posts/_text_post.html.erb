<% cache text_post do %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <% if params[:action] == 'index' %>
        <%= link_to text_post.title, post_path(text_post.id), class: 'link' %>
      <% else %>
        <%= text_post.title %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <p><em> <%= link_to "By #{text_post.user.name}", user_path(text_post.user.id) %></em></p>
    <p><%= "Created #{time_ago_in_words text_post.created_at}" %></p>
    <%= sanitize text_post.body %>
    <p><%= pluralize text_post.cached_comment_count, "Comment" %></p>
    <% #debugger %>
<% end %>

    <% if text_post.user == current_user %>
      <p><%= link_to "Edit", edit_text_post_path(text_post), class: "btn btn-default" %></p>
    <% end %>
  </div>
</div>

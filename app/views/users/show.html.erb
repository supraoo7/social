<div class="page-header">
  <h1>User</h1>
</div>

<p class="lead"><%= @user.name %></p>

<% if @user == current_user %>
  <p class="lead">API Token: <%= @user.api_token %></p>
<% end %>

<% if !current_user.nil? && current_user.id != @user.id && !current_user.following?(@user) %>
<%= link_to "Follow", follow_user_path(@user), method: :post, class: "btn btn-default" %>
<% end %>

<h2>Posts</h2>

<%= render @posts %>

<%= link_to "Home", root_path, class: "btn btn-default" %>